<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/songs_items"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <LinearLayout
        android:id="@+id/play_lists_play"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#9df5b1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/play_lists_info_l">


    <ImageView
        android:id="@+id/album_art_playlist"
        android:layout_gravity="center_vertical"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_album_black_24dp"
        android:background="@color/blankImageColor"

        />



       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:orientation="vertical">


           <TextView
               android:id="@+id/play_lists_name"
               android:ellipsize="end"
               android:maxLines="1"
               android:textColor="#000"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/play_lists_song_count"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />

       </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/play_lists_info_l"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="#9df5b1"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        >
    <ImageView

        android:id="@+id/play_lists_info"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_more_horiz_black_24dp"/>
    </LinearLayout>


</RelativeLayout>